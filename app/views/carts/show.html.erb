<div class="bg-white p-4 pb-20">
  <h1 class="text-4xl font-bold leading-10 tracking-tight text-gray-900">Carrito de compra</h1>

  <div class="mt-12 grid grid-cols-12 gap-12">
    <section class="col-span-7">
      <div id="cart-items">
        <% if @cart.cart_items.any? %>
          <%= render partial: 'carts/cart_item', collection: @cart.cart_items %>
        <% else %>
          <p id="empty-cart-message">Tu carrito está vacío.</p>
        <% end %>
      </div>
    </section>

    <section class="col-span-5 bg-gray-100 rounded-md p-8 mt-0">
      <h2 class="text-lg font-medium text-gray-900" id="slide-over-title">Resumen de orden</h2>
      <div class="flex justify-between pt-4 mb-4">
        <div class="avx awd axu">Orden total</div>
        <div class="font-medium text-base">
          S/. <%= number_to_currency(@cart.total, unit: 'S/', separator: '.', delimiter: ',') %>
        </div>
      </div>

      <div>
        <%= button_to "Comprar", orders_path, method: :post, id: "checkout" %>
      </div>
    </section>
  </div>
</div>
