<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>
    <style>
      /* Estilos para el formulario de inicio de sesión */
      body {
        background: linear-gradient(135deg, #4a667d, #1f2f46);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        flex-direction: column;
      }

      .alert {
        width: 100%;
      }

      .login-container {
        max-width: 400px;
        width: 100%;
        padding: 20px;
        margin: auto;
      }

      .login-card {
        background: #2c3e50;
        border-radius: 12px;
        padding: 40px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        color: #fff;
      }

      h2 {
        text-align: center;
        margin-bottom: 25px;
        color: #ffffff;
        font-size: 1.8em;
      }

      .input-group {
        margin-bottom: 12px;
      }

      .input-label {
        display: block;
        margin-bottom: 6px;
        color: #ffffff;
        font-weight: bold;
      }

      .input-field {
        width: 100%;
        padding: 10px;
        border-radius: 12px;
        border: 1px solid #3b4f63;
        font-size: 14px;
        background-color: #34495e;
        color: #fff;
      }

      .input-field::placeholder {
        color: #aaa;
      }

      .password-container {
        position: relative;
      }

      .password-input {
        width: 100%;
        padding-right: 40px;
      }

      .toggle-password {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        cursor: pointer;
        font-size: 18px;
        color: #aaa;
      }

      .toggle-password svg {
        width: 20px;
        height: 20px;
      }

      .login-button {
        width: 100%;
        padding: 12px;
        background-color: #4f82e0;
        color: #fff;
        border: none;
        border-radius: 12px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
        margin-top: 20px;
      }

      .login-button:hover {
        background-color: #5a93f1;
      }

      .link-group {
        text-align: center;
        margin-top: 20px;
      }

      .back-link {
        color: #8ca9ff;
        text-decoration: none;
        font-size: 14px;
      }

      .back-link:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>

    <div class="login-container">
      <div class="login-card">
        <h2>Iniciar Sesión</h2>
        <form action="/login" method="post" class="login-form">
          <div class="input-group">
            <label for="username" class="input-label">Usuario</label>
            <input type="text" id="username" name="username" placeholder="Ingresa tu usuario" class="input-field" required>
          </div>

          <div class="input-group">
            <label for="password" class="input-label">Contraseña</label>
            <div class="password-container">
              <input type="password" id="password" name="password" placeholder="Ingresa tu contraseña" class="input-field password-input" required>
              <button type="button" class="toggle-password" onclick="togglePassword()">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path d="M15 12c0 1.657-1.343 3-3 3s-3-1.343-3-3 1.343-3 3-3 3 1.343 3 3z" />
                  <path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.269 2.943 9.542 7-.707 2.066-2.17 3.787-4.01 4.722L15.07 12l2.462-2.458C17.548 8.66 14.89 7 12 7c-2.89 0-5.548 1.66-6.532 3.542L5.93 12 3.468 9.542A10.027 10.027 0 002.458 12z" />
                </svg>
              </button>
            </div>
          </div>

          <div class="button-group">
            <button type="submit" class="login-button">Iniciar sesión</button>
          </div>
        </form>
        <div class="link-group">
          <a href="/" class="back-link">Volver a inicio</a>
        </div>
      </div>
    </div>

    <script>
      function togglePassword() {
        const passwordInput = document.getElementById('password');
        const passwordToggle = document.querySelector('.toggle-password');

        if (passwordInput.type === 'password') {
          passwordInput.type = 'text';
          passwordToggle.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M3.59 3.59l17.82 17.82-1.42 1.42L3.59 5.01 1.98 3.6l1.41-1.42zm10.25 1.42a8.968 8.968 0 015.42 1.82L17.1 8.1C15.566 6.912 13.812 6 12 6c-3.038 0-5.78 1.713-7.267 4.308L2.69 8.706A10.019 10.019 0 0112 4.01c1.397 0 2.733.257 4.02.752L13.84 9.95 9.48 5.59l-1.41 1.42L13.84 14.8l1.42-1.42-4.18-4.17 5.72 5.72-3.8-3.79z"/></svg>';
        } else {
          passwordInput.type = 'password';
          passwordToggle.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M15 12c0 1.657-1.343 3-3 3s-3-1.343-3-3 1.343-3 3-3 3 1.343 3 3z"/><path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.269 2.943 9.542 7-.707 2.066-2.17 3.787-4.01 4.722L15.07 12l2.462-2.458C17.548 8.66 14.89 7 12 7c-2.89 0-5.548 1.66-6.532 3.542L5.93 12 3.468 9.542A10.027 10.027 0 002.458 12z"/></svg>';
        }
      }
    </script>

  </body>
</html>
